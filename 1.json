{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description" : "testing the cloudformation template",
    "Parameters" : {
        "vpccidr" : {
            "Description" : "this is to pass the vpc cidr",
            "Type" : "String",
            "Default" : "10.0.0.0/16",
            "AllowedValues" : [
                "10.0.0.0/16", "10.0.1.0/16"
            ]
            
        },
        "subnet1cidr" : {
            "Description" : "this is to pass the subnet1 cidr",
            "Type" : "String",
            "Default" : "10.0.1.0/24"
        }
    },
   

    "Resources" : {
        "myVPC" : {
            "Type" : "AWS::EC2::VPC",
            "Properties" : {
                "CidrBlock" : 
                { "Ref": "vpccidr" }
                ,
                "EnableDnsHostnames" : "true",
                "Tags" : [
                    {
                        "Key" : "test",
                        "Value" : "production"
                    }
                ]
            }
        },
        
        "subnet1": {
          "Type": "AWS::EC2::Subnet",
          "Properties": {
            "AvailabilityZone": {
                "Fn::Select" : [
                    0,
                    {
                     "Fn::GetAZs" : "" 
                    }
                ]
            } ,
            
            "VpcId": 
            { "Ref": "myVPC" },
            
            "CidrBlock": 
            { "Ref": "subnet1cidr" },
            
            "Tags": [ {
                "Key" : "env",
                "Value" : "production"
            }

            ]
          }
        }
        
     }
}