{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "I am working on the CloudFormation",
    "Parameters": {
        "vpccidr": {
            "Type": "String",
            "Default": "10.0.0.0/16",
            "AllowedValues": [
                "10.0.0.0/16",
                "10.0.1.0/16"
            ]
        },
        "pubcidr": {
            "Type": "String",
            "Default": "10.0.1.0/24",
            "AllowedValues": [
                "10.0.1.0/24",
                "10.0.2.0/24"
            ]
        },
        "pub2cidr": {
            "Type": "String",
            "Default": "10.0.3.0/24",
            "AllowedValues": [
                "10.0.3.0/24",
                "10.0.4.0/24"
            ]
        }
    },
    "Resources": {
        "myvpc": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": {
                    "Ref": "vpccidr"
                },
                "InstanceTenancy": "default"
            }
        },
        "web1cidr": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "myvpc"
                },
                "CidrBlock": {
                    "Ref": "pubcidr"
                },
                "AvailabilityZone": {
                    "Fn::Select": [
                        0,
                        {
                            "Fn::GetAZs": ""
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "env",
                        "Value": "test"
                    },
                    {
                        "Key": "name",
                        "Value": "web1cidr"
                    },
                    {
                        "Key": "createdby",
                        "Value": "cloudformationTemplate"
                    }
                ]
            }
        },
        "web2cidr": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Fn::Select": [
                        1,
                        {
                            "Fn::GetAZs": ""
                        }
                    ]
                },
                "CidrBlock": {
                    "Ref": "pub2cidr"
                },
                "Tags": [
                    {
                        "Key": "env",
                        "Value": "test"
                    },
                    {
                        "Key": "name",
                        "Value": "web2cidr"
                    },
                    {
                        "Key": "createdby",
                        "Value": "cloudformationTemplate"
                    }
                ]
            }
        }
    }
}
